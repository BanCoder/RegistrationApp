<Window x:Class="RegistrationApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация" Height="478" Width="399"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
		Background="Transparent">

	<Window.Resources>
		<Style x:Key="MinimalTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="#E0E0E0"/>
			<Setter Property="BorderThickness" Value="0 0 0 1"/>
			<Setter Property="Padding" Value="0,12"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="Width" Value="300"/>
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="#007ACC"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="MinimalButton" TargetType="Button">
			<Setter Property="Background" Value="#007ACC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Padding" Value="20,12"/>
			<Setter Property="Width" Value="300"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border"
							Background="{TemplateBinding Background}"
							CornerRadius="10"
							SnapsToDevicePixels="True">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="LightBlue"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter TargetName="border" Property="Background" Value="#005AAC"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="MinimalCheckBox" TargetType="CheckBox">
			<Setter Property="Foreground" Value="#666666"/>
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
	</Window.Resources>
	
	<Border CornerRadius="0,0,10,10" Background="LightCyan">
		<Grid Margin="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="24*"/>
				<RowDefinition Height="395*"/>
				<RowDefinition Height="21*"/>
			</Grid.RowDefinitions>
			<StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,9,0,0" Grid.RowSpan="3">
				<TextBlock Text="Создать аккаунт" 
                 FontSize="24" 
                 FontWeight="Light" 
                 Foreground="#333333" 
                 HorizontalAlignment="Center"
                 Margin="0,0,0,20"/>
				<StackPanel Width="300">
					<StackPanel>
						<TextBlock Text="Имя" 
                         Foreground="#666666" 
                         FontSize="12" 
                         Margin="0,0,0,5"/>
						<TextBox x:Name="FirstNameTextBox" 
                       Style="{StaticResource MinimalTextBox}"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="Фамилия" 
                         Foreground="#666666" 
                         FontSize="12" 
                         Margin="0,0,0,5"/>
						<TextBox x:Name="LastNameTextBox" 
                       Style="{StaticResource MinimalTextBox}"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="Email" 
                         Foreground="#666666" 
                         FontSize="12" 
                         Margin="0,0,0,5"/>
						<TextBox x:Name="EmailTextBox" 
                       Style="{StaticResource MinimalTextBox}"/>
					</StackPanel>
					<StackPanel>
						<TextBlock Text="Пароль" 
                         Foreground="#666666" 
                         FontSize="12" 
                         Margin="0,0,0,5"/>
						<PasswordBox x:Name="PasswordBox"
                           Background="Transparent"
                           BorderBrush="#E0E0E0"
                           BorderThickness="0 0 0 1"
                           Padding="0,12"
                           FontSize="14"
                           VerticalContentAlignment="Center"
                           Width="300">
							<PasswordBox.Style>
								<Style TargetType="PasswordBox">
									<Style.Triggers>
										<Trigger Property="IsFocused" Value="True">
											<Setter Property="BorderBrush" Value="#007ACC"/>
										</Trigger>
									</Style.Triggers>
								</Style>
							</PasswordBox.Style>
						</PasswordBox>
					</StackPanel>
					<CheckBox x:Name="AgreementCheckBox"
                    Content="Принимаю условия использования"
                    Style="{StaticResource MinimalCheckBox}"
                    Margin="0,10,0,20"/>
					<Button x:Name="RegisterButton"
						Content="Зарегистрироваться"
						Style="{StaticResource MinimalButton}"
						Click="Button_Click" Height="29"/>
				</StackPanel>
				<Border Height="1" Background="#EEEEEE" Margin="0,30,0,20" Width="300"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>